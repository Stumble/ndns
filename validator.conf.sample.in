rule
{
  id "NDNS Validator"
  for data
  checker
  {
    type customized
    sig-type ecdsa-sha256
    key-locator
    {
      type name
      hyper-relation
      {
        k-regex ^([^<NDNS>]*)<NDNS><KEY><>$
        k-expand \\1
        h-relation @RELATION@ ; data is only allowed to be signed by the zone key
        p-regex ^([^<NDNS>]*)<NDNS>(<>*)<><>$
        p-expand \\1
      }
    }
  }
}

trust-anchor
{
  type file
  file-name @ANCHORPATH@
}
